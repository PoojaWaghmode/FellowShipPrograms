@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html>
<head>
    <title>Employee CRUD Operation </title>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/js/HomeController.js" type="text/javascript"></script>
    <meta charset="utf-8" />
</head>
<body>

    <!--Here Using bootstrap created modal i.e form-->
    <div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Operations</button><br /><br />
    </div>

    <!--Here on button click loadData() method is called-->
    <button type="button" class="btn btn-primary" onclick="loadData()">Show Employees</button>

    <!--Here i have used bootstarp class for table-->
    <table class="table table-bordered table-hover">

        <!--Here i have created table-->
        <thead>
            <tr>
                <th>
                    EmployeeId
                </th>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    Address
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title" id="myModalLabel" align="center">CRUD Opration</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button><br />

                </div>
                <div class="modal-body">
                    <form>

                        <div class="form-group">
                            <label for="FirstName">FirstName</label>
                            <input type="text" class="form-control" id="firstName" placeholder="Enter FirstName Here" required />
                        </div>
                        <div class="form-group">
                            <label for="LastName">LastName</label>
                            <input type="text" class="form-control" id="lastName" placeholder="Enter LastName Here" required />
                        </div>
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="Enter Address Here" required />
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter Email Here" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">

                    <!--Here i have give action to add() button-->
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="Add()">Add</button>
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="Delete()">Delete</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

